<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaceYa.Views.RaceResultPage"
             Title="Race result">

    <ContentPage.Content>
        <StackLayout  Margin="20"
                      Spacing="10">
            <Grid ColumnDefinitions="*,*">
                <Label Text="Total distance (m)"
                       FontSize="16"
                       FontAttributes="Bold"/>
                
                <Label Grid.Column="1"
                       FontSize="16"
                       Text="{Binding Distance, StringFormat=\{0:#\}}}"/>
            </Grid>
            <Grid ColumnDefinitions="*,*">
                <Label Text="Average speed (m/s)"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Grid.Column="1"
                       FontSize="16"
                       Text="{Binding AverageSpeed, StringFormat=\{0:#.##\}}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>